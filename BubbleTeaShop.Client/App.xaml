<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BubbleTeaShop.Client"
             xmlns:converters="clr-namespace:BubbleTeaShop.Client.ViewModels"
             x:Class="BubbleTeaShop.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:ListToCommaSeperatedConverter x:Key="ListToCommaSeparatedConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
